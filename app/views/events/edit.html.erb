<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
        <br><br><br>
        <%= form_for @event, url: event_path(params[:id]), method: :put do |f| %>
        <h1 class="h3 mb-3 font-weight-normal text-center">Modification de l'évènement:</h1>
                <div class="field">
                <%= f.label :start_date, "Date:"  %><br />
                <%= f.text_field :start_date, class: "form-control" %>
                </div>
                <div class="field">
                <%= f.label :duration, "Durée:" %><br />
                <%= f.text_field :duration, class: "form-control" %>
                </div>
                <div class="field">
                <%= f.label :description, "Description:" %><br />
                <%= f.text_area :description, class: "form-control" %>
                </div>
                <div class="field">
                <%= f.label :title, "Intitulé:" %><br />
                <%= f.text_field :title, class: "form-control" %>
                </div>
                <div class="field">
                <%= f.label :price, "Prix:" %><br />
                <%= f.text_field :price, class: "form-control" %>
                </div>
                <div class="field">
                <%= f.label :location, "Localité:" %><br />
                <%= f.text_field :location, class: "form-control" %>
                </div>   
                <%= f.label :download_image %>
                <%= f.file_field :picture %>
                <div class="actions mt-5">
                <p> <%= f.submit "Modifier", class: "btn btn-lg btn-primary btn-block" %> <%= link_to 'Delete the event', event_path(id: @event), method: :delete, data: { confirm: 'Are you sure?' } %> </p>
                </div>                
        <% end %>
    </div>
  </div>
</div>
