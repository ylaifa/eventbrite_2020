<div class="col col-6 mx-auto text-dark">
	<h2 class="mt-3"><%= @event.title %> - Guest list</h2>
    <p><%= link_to "Edit your event", edit_event_path(@event), class: "btn btn-secondary", role: "button" %></p>
	<ul>
		<% @attendances.each do |user| %>
            <div class="card-body">
            <p class="list-group-item">First Name: <%= user.profile.first_name %></p>
            <p class="list-group-item">Last Name: <%= user.profile.last_name %></p>
            <p class="list-group-item">Email: <%= user.email %></p>
            </div>
        <% end %>
	</ul>
</div>