<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
        <br><br><br>
        <%= form_for @profile, url: profile_path(params[:id]), method: :put do |f| %>
        <h1 class="h3 mb-3 font-weight-normal text-center">Edit your profile infos:</h1>
                <div class="field">
                <%= f.label :first_name  %><br />
                <%= f.text_field :first_name, class: "form-control" %>
                </div>
                <div class="field">
                <%= f.label :last_name %><br />
                <%= f.text_field :last_name, class: "form-control" %>
                </div>
                <div class="field">
                <%= f.label :description, "Description:" %><br />
                <%= f.text_area :description, class: "form-control" %>
                </div>  
                <%= f.label :download_image %>
                <%= f.file_field :avatar %>
                <div class="actions mt-5">
                <p> <%= f.submit "edit", class: "btn btn-lg btn-primary btn-block" %> </p>
                </div>                
        <% end %>
    </div>
  </div>
</div>